<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/moodCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Recent Mood"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:id="@+id/moodCardMoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/moodCardTitle"
            android:text = "name of mood"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/moodCardDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/moodCardMoodName"
            android:text = "date of mood"
            android:textSize="18sp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>