<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/dialogueRelativeLayout"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#f5f5f5"
    android:screenOrientation="portrait">

    <EditText
        android:id="@+id/habitName"
        android:selectAllOnFocus="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Habit Name"/>

    <EditText
        android:id="@+id/habitFrequency"
        android:selectAllOnFocus="true"
        android:layout_width="82dp"
        android:layout_height="50dp"
        android:layout_below="@+id/habitName"
        android:layout_alignLeft="@+id/habitName"
        android:layout_marginTop="52dp"
        android:text="0"
        android:inputType="number"/>
    <TextView
        android:id="@+id/timesPer"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="5dp"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        android:text="times per"
        android:layout_alignBottom="@+id/habitFrequency"
        android:layout_below="@+id/habitName"
        android:layout_toRightOf="@+id/habitFrequency"/>

    <Spinner
        android:id="@+id/editFreqSpinner"
        android:background="#FFFFFF"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/habitName"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@+id/timesPer" />

</RelativeLayout>